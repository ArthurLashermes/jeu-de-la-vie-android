<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/checkBoxSurvive1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/born"

        />

    <CheckBox
        android:id="@+id/checkBoxSurvive1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:ignore="MissingConstraints" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxSurvive2"
        app:layout_constraintTop_toTopOf="@+id/checkBoxSurvive1"
        app:layout_constraintStart_toEndOf="@+id/checkBoxSurvive1"


        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxSurvive3"
        app:layout_constraintTop_toTopOf="@+id/checkBoxSurvive1"
        app:layout_constraintStart_toEndOf="@+id/checkBoxSurvive2"


        />

    <CheckBox
        android:id="@+id/checkBoxSurvive4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/checkBoxSurvive3"
        app:layout_constraintTop_toTopOf="@+id/checkBoxSurvive1"


        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxSurvive5"
        app:layout_constraintTop_toTopOf="@+id/checkBoxSurvive1"
        app:layout_constraintStart_toEndOf="@+id/checkBoxSurvive4"


        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxSurvive6"
        app:layout_constraintTop_toTopOf="@+id/checkBoxSurvive1"
        app:layout_constraintStart_toEndOf="@+id/checkBoxSurvive5"


        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxSurvive7"
        app:layout_constraintTop_toTopOf="@+id/checkBoxSurvive1"
        app:layout_constraintStart_toEndOf="@+id/checkBoxSurvive6"


        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxSurvive8"
        app:layout_constraintStart_toEndOf="@+id/checkBoxSurvive7"
        app:layout_constraintTop_toTopOf="@+id/checkBoxSurvive1"
        />

</androidx.constraintlayout.widget.ConstraintLayout>